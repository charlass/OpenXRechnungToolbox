  <build>	        
   <plugins> 
  
	<plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <!--  ******************************* -->
          <!--  copy resources and other files to target directory -->
          <!--  ******************************* -->
          <execution>
          	<id>copyresources</id>
            <phase>package</phase>
            <configuration>
              <target>
				<copy todir="${project.build.directory}" >  
				    <fileset dir="${basedir}">  
				        <include name="resources/**"/>
				    </fileset>
				</copy>
				<copy todir="${project.build.directory}" >  
				    <fileset dir="${basedir}">  
				        <include name="openJDK/**"/>
				    </fileset>
				</copy>
				<copy todir="${project.build.directory}" >  
				    <fileset dir="${basedir}">  
				        <include name="exampleInvoices/**"/>
				    </fileset>
				</copy>
				<copy todir="${project.build.directory}" >  
				    <fileset dir="${basedir}">  
				        <include name="license.txt"/>
				    </fileset>
				</copy>
				<copy todir="${project.build.directory}" >  
				    <fileset dir="${basedir}">  
				        <include name="CHANGELOG.md"/>
				    </fileset>
				</copy>
				<copy todir="${project.build.directory}" >  
				    <fileset dir="${basedir}">  
				        <include name="OpenXRechnungToolbox.sh"/>
				    </fileset>
				</copy>
				<copy todir="${project.build.directory}" >  
				    <fileset dir="${basedir}">  
				        <include name="OpenXRechnungToolboxMac.sh"/>
				    </fileset>
				</copy>
				<copy todir="${project.build.directory}" >  
				    <fileset dir="${basedir}">  
				        <include name="knownIssues.txt"/>
				    </fileset>
				</copy>
				<copy todir="${project.build.directory}" >  
				    <fileset dir="${basedir}">  
				        <include name="nsis_installer.nsi"/>
				    </fileset>
				</copy>
				<get src="${jsign.url}"
 					 dest="jsign.jar" verbose="true" usetimestamp="true" />
				<copy todir="${project.build.directory}" >  
				    <fileset dir="${basedir}">  
				        <include name="jsign.jar"/>
				    </fileset>
				</copy>
              </target>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>	
		  <!--  ******************************* -->
		  <!-- copy jar file to a nice name -->
          <!--  ******************************* -->
          <execution>
          	<id>copyjar</id>
            <phase>install</phase>
            <configuration>
              <target>
              	<copy file="${project.build.directory}/OpenXRechnungToolbox_${project.version}-jar-with-dependencies.jar" tofile="${project.build.directory}/OpenXRechnungToolbox.jar"/>  
              </target>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>			
          </execution>	
        </executions>
      </plugin>
	    <plugin>
	      <artifactId>maven-assembly-plugin</artifactId>
		  <!--  ******************************* -->
	      <!--  create jar file with dependencies -->
		  <!--  ******************************* -->
	      <configuration>
	      	<finalName>OpenXRechnungToolbox_${project.version}</finalName>
	        <descriptorRefs>
	          <descriptorRef>jar-with-dependencies</descriptorRef>
	        </descriptorRefs>
			<archive>
	          <manifest>
	            <mainClass>org.oxt.toolbox.gui.AppWindow</mainClass>
	          </manifest>
	        </archive>    
	      </configuration>
	      <executions>
	        <execution>
	          <phase>package</phase>
	          <goals>
	            <goal>single</goal>
	          </goals>
	        </execution>   
	      </executions>	
	  </plugin>
   </plugins>
    </build>   
</project>
